<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/back_alert_round"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/google_sans"
        android:text="KeyAccess"
        android:textColor="?attr/textGray800"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/google_sans"
        android:text="Confirm fingerprint to continue"
        android:textColor="@color/Gray700"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:textAlignment="textStart"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"/>

    <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:padding="5dp"
            android:src="@drawable/fingerprint"
            android:layout_gravity="center"
            android:background="@drawable/back_white_round"
            android:backgroundTint="@color/Gray50"
            android:layout_marginTop="20dp" />

    <TextView
            android:id="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Touch sensor"
            android:textSize="14sp"
            android:textColor="@color/Gray700"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:fontFamily="@font/google_sans"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            tools:ignore="RtlCompat"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/Gray300"
                    android:layout_marginTop="10dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/passcode"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/White100T"
                android:textColor="@color/TweetIconEnable"
                android:text="Use Passcode"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/google_sans"/>

        <RelativeLayout android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/Gray300"/>

        <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/White100T"
                android:textColor="@color/Gray700"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/google_sans"/>

    </LinearLayout>

</LinearLayout>